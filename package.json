{
  "name": "better-ajaxify",
  "description": "Ajax website engine for better-dom",
  "version": "1.8.1",
  "author": "Maksim Chemerisuk",
  "license": "MIT",
  "homepage": "https://github.com/chemerisuk/better-ajaxify",
  "repository": {
    "type": "git",
    "url": "https://github.com/chemerisuk/better-ajaxify"
  },
  "devDependencies": {
    "better-dom-boilerplate": "git://github.com/chemerisuk/better-dom-boilerplate.git",
    "es6-promise-polyfill": "^1.0.0"
  },
  "config": {
    "gulp": "--gulpfile node_modules/better-dom-boilerplate/gulpfile.js --cwd .",
    "karma": {
      "files": [
        "bower_components/better-dom/dist/better-dom.js",
        "node_modules/es6-promise-polyfill/promise.js",
        "bower_components/better-xhr/dist/better-xhr.js",
        "build/*.js",
        "test/*.spec.js"
      ]
    }
  },
  "scripts": {
    "test": "gulp test $npm_package_config_gulp",
    "start": "gulp dev $npm_package_config_gulp",
    "release": "gulp release $npm_package_config_gulp",
    "postrelease": "gulp gh-pages $npm_package_config_gulp"
  }
}
